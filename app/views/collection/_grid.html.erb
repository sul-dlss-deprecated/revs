<div id="documents" class="gallery">
  <ul class="image-grid">
    <% @collections.each do |collection|
      collection_title=collection.title.html_safe%>
      <li class="image-item">
        <div class="blacklight-collection document collections-result">
          <%= link_to_document(collection,
              image_tag(collection.first_image(:include_hidden=>can?(:view_hidden, SolrDocument)),
              :alt => collection_title,:title=>collection_title))  %>
              <% if collection.visibility == :hidden %>
                <span class="public-visibility-status label label-warning"><%= t('revs.messages.public_visibility_hidden') %></span>
              <% end %>
          <h5 class="index_title">
            <%= link_to_document collection, collection_title %>
            <%= archive_label(collection.archive_name) %>
            <span class="text-muted">
              (<%= pluralize(number_with_delimiter(collection.collection_members(:include_hidden=>can?(:view_hidden, SolrDocument)).total_members),
                  t('revs.collection_members.items_name')) %>)
            </span>
          </h5>
        </div>
      </li>
    <% end %>
  </ul>
</div>
