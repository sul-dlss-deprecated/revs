<% if @document.valid? %>
	 $('#item_details').html("<%= escape_javascript(render :partial => "/catalog/show_default_collection_member", :locals => {:document => @document}) %>");
	 $('.show-document-title').html("<%=@document.title%>");
<% else %>
	$('.item-edit-errors').html("<%=@message%>");
	$('.item-edit-errors').removeClass('hidden');
<% end %>
$('#main-flashes').html("<%= escape_javascript(render( :partial => "/flash_msg")).html_safe %>");
setupItemDetailPanels();
showOnLoad();
window.scrollTo(0,0);