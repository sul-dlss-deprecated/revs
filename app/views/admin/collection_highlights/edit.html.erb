<div id="content" class="span9 admin">

  <h2><%=@collection.title%></h2>

  <%= form_tag admin_collection_highlight_path(@collection.id), :id => 'collection_highlights_edit', :method => :put, :html => { :class => "form-horizontal"} do %>

  <div class="control-group">
    <div class="controls">
      Highlighted: <%= check_box_tag :highlighted, "true", @collection.highlighted == "true",:class => 'control-label' %>
    </div>
  </div>
  
    <div class="control-group">
      <div class="controls">
        <%=@collection.description%>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <%=image_tag @collection.first_image%>
      </div>
    </div>



    <div class="control-group">
      <div class="controls">
        <%= link_to button_tag(t('revs.nav.cancel'),:type => 'button',:class => "btn"), admin_collection_highlights_path %>
        <%= submit_tag t('revs.nav.update'), :class => "btn" %>
      </div>
    </div>

  <% end %>

</div>

<%= render :partial => 'devise/shared/show_admin_sidebar' %>
