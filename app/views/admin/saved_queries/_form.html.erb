<%= validation_errors(@saved_query) %>

<div class="form-group">
  <%= f.label :title, t('revs.show.label_title'), :class => 'control-label col-xs-12 col-sm-4 col-md-3' %>
  <div class="col-xs-6 col-md-5">
    <%= f.text_field :title, :size=>"80", :autofocus => true, :class => "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :query, :class => 'control-label col-xs-12 col-sm-4 col-md-3' %>
  <div class="col-xs-6 col-md-5">
    <%= f.text_field :query, :size=>"80", :class => "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :description, :class => 'control-label col-xs-12 col-sm-4 col-md-3' %>
  <div class="col-xs-6 col-md-5">
    <%= f.text_area :description, :rows => "6", :class => "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :image_thumbnail_url, :class => 'control-label col-xs-12 col-sm-4 col-md-3' %>
  <div class="col-xs-6 col-md-5">
    <%= f.text_field :thumbnail, :size=>"80", :class => "form-control" %>
  </div>
</div>

<div class="form-group">
   <%= f.label :active, t('revs.user.active'), :class => 'control-label col-xs-12 col-sm-4 col-md-3' %>
   <div class="col-xs-9 col-sm-7 col-md-8">
     <div class="radio">
       <label>
         <%= f.radio_button :active, true %>
         <%= t('revs.user.active') %>
       </label>
      </div>
      <div class="radio">
        <label>
         <%= f.radio_button :active, false %>
         <%= t('revs.user.inactive') %>
        </label>
      </div>
   </div>
 </div>

<div class="form-group">
  <div class="col-sm-offset-4 col-sm-6 col-md-offset-3">
    <%= f.submit t('revs.nav.update'), :class => "btn btn-default" %>
    <%= link_to t('revs.nav.cancel'),admin_saved_queries_path%>
  </div>
</div>
