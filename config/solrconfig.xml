<!--
 This is a stripped down config file used for a simple example...
 It is *not* a good example to work from.
-->
<config>
  <luceneMatchVersion>LUCENE_4_10_4</luceneMatchVersion>
  <!--  The DirectoryFactory to use for indexes.
        solr.StandardDirectoryFactory, the default, is filesystem based.
        solr.RAMDirectoryFactory is memory based, not persistent, and doesn't work with replication. -->
  <directoryFactory name="DirectoryFactory" class="${solr.directoryFactory:solr.StandardDirectoryFactory}"/>

<lib dir="./lib" />
<lib dir="../lib" />
<lib dir="../lib/contrib/analysis-extras/lib" />
<lib dir="../lib/contrib/analysis-extras/lucene-libs" />

  <dataDir>${solr.core0.data.dir:}</dataDir>

  <updateHandler class="solr.DirectUpdateHandler2">
    <updateLog>
      <str name="dir">${solr.core0.data.dir:}</str>
    </updateLog>
    <autoCommit>
      <maxDocs>500</maxDocs> <!-- maximum uncommited docs before autocommit triggered -->
      <maxTime>30000</maxTime> <!-- maximum time (in MS) after adding a doc before an autocommit is triggered -->
      <openSearcher>true</openSearcher> <!-- SOLR 4.0.  Optionally don't open a searcher on hard commit.  This is useful to minimize the size of transaction logs that keep track of uncommitted updates. -->
    </autoCommit>
    <autoSoftCommit>
      <maxDocs>50</maxDocs> <!-- maximum uncommited docs before autosoftcommit triggered -->
      <maxTime>5000</maxTime> <!-- maximum time (in MS) after adding a doc before an autosoftcommit is triggered -->
    </autoSoftCommit>
  </updateHandler>

  <jmx />

  <!-- realtime get handler, guaranteed to return the latest stored fields
    of any document, without the need to commit or open a new searcher. The current
    implementation relies on the updateLog feature being enabled. -->
  <requestHandler name="/get" class="solr.RealTimeGetHandler">
    <lst name="defaults">
      <str name="omitHeader">true</str>
    </lst>
  </requestHandler>

  <requestHandler name="/replication" class="solr.ReplicationHandler" startup="lazy" />

  <requestDispatcher handleSelect="true" >
    <requestParsers enableRemoteStreaming="false" multipartUploadLimitInKB="2048" />
  </requestDispatcher>

  <requestHandler name="standard" class="solr.StandardRequestHandler" default="true">
    <lst name="defaults">
      <str name="defType">edismax</str>
      <str name="q.alt">*:*</str>
      <str name="mm">2&lt;80% 4&lt;70%</str>
      <int name="qs">1</int>
      <int name="ps">0</int>
      <str name="sort">score desc, title_sort asc</str>
      <str name="qf">
        id
        title_tsi
				description_tsim
				annotations_tsim
				source_id_ssi
				group_class_tsi
				visibility_isi
        pub_date_ssi
        vehicle_markings_tsi
			    <!-- Begin references to copy fields for searching-->
				people_tim
				entrant_tim
				current_owner_ti
				venue_ti
				track_ti
				event_ti
				cities_ti
				countries_ti
				states_ti
				city_sections_ti
				photographer_ti
				marque_tim
				model_tim
				model_year_tim
				pub_year_tim
        group_tim
        class_ti
      </str>
      <str name="pf">
        title_tsi^20
      </str>
    </lst>
  </requestHandler>

  <requestHandler name="/analysis/field" startup="lazy" class="solr.FieldAnalysisRequestHandler" />
  <requestHandler name="/update" class="solr.UpdateRequestHandler"  />
  <requestHandler name="/admin/" class="org.apache.solr.handler.admin.AdminHandlers" />

  <requestHandler name="/admin/ping" class="solr.PingRequestHandler">
    <lst name="invariants">
      <str name="q">solrpingquery</str>
    </lst>
    <lst name="defaults">
      <str name="echoParams">all</str>
    </lst>
  </requestHandler>

  <!-- config for the admin interface -->
  <admin>
    <defaultQuery>solr</defaultQuery>
  </admin>

</config>
